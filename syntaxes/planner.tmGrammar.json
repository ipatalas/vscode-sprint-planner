{
	"scopeName": "source.planner",
	"patterns": [{ "include": "#expression" }],
	"repository": {
		"expression": {
			"patterns": [
				{ "include": "#activity" },
				{ "include": "#iteration-id" },
				{ "include": "#user-story-tag" },
				{ "include": "#user-story-id" },
				{ "include": "#estimation" },
				{ "include": "#task-description" },
				{ "include": "#task-id" },
				{ "include": "#task" }
			]
		},
		"activity": {
			"match": "^\\w+:$",
			"name": "storage.type"
		},
		"iteration-id": {
			"match": "^IT#\\h{8}(\\-\\h{4}){3}\\-\\h{12}",
			"name": "entity.name.function"
		},
		"user-story-tag": {
			"match": "^US#(?=\\d+)",
			"name": "entity.name.function"
		},
		"user-story-id": {
			"match": "(?<=^US#)\\d+",
			"name": "entity.name.tag"
		},
		"estimation": {
			"match": "(\\d+(\\.\\d{1,2})?h?|\\d+m)(?=$| \\[#\\d+\\]$)",
			"name": "constant.numeric"
		},
		"task-id": {
			"match": "(?<=\\[)#\\d+(?=\\]$)",
			"name": "entity.name.tag"
		},
		"task-description": {
			"match": "^\t.*",
			"name": "comment.line"
		},
		"task": {
			"match": "^(?:(?:[-*] |(?!US#)\\w+)).*?(?=,[^,]*$| \\[#\\d+\\]$|$)",
			"name": "string.unquoted"
		}
	}
}